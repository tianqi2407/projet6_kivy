#:kivy 1.8.0
#:import datetime datetime
#:import wal wall

RootWidget:
    # import container
    container: container

    # fill the container
    BoxLayout:
        id: container
        orientation: 'vertical'
        padding: 0
        spacing: 3

        Label:
            text: 'choose a wall'
			font_size: '30sp'
		
        BoxLayout:
            size_hint: .5, None
			height: 100
			pos_hint: {'center_x': .5}
			orientation: 'vertical'

            # weiter button
			Button:
				text: 'add (wall builder)'
				on_release: app.next_screen('wall_builder_screen')
			Spinner:
				id: spinner
				values: wal.get_all_wall_name()
				text: wal.get_first_wall_name()
			Button:
				text: 'Previous screen'
            Button:
                text: 'Next screen'
                on_release: app.next_screen('scenary')
