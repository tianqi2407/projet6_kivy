#:import wal wall
#:import wbs wall_builder_screen

RootWidget:
    # import container
    container: container

    # fill the container
    BoxLayout:
        id: container
        orientation: 'vertical'
        padding: 0
        spacing: 3

        Label:
            text: 'choose a wall'
			font_size: '30sp'
		
        BoxLayout:
			orientation: 'vertical'
            size_hint: .5, None
			height: 100
			pos_hint: {'center_x': .5}


			BoxLayout:
                TextInput:
                    id: wallName
                Button:
                    text: 'Add a new Wall'
                    on_release:
                        app.next_screen('wall_builder_screen')
                        wbs.newWall(wallName.text)


            BoxLayout:
                Spinner:
                    id: spinner
                    values: wal.get_all_wall_name()
                    text: wal.get_first_wall_name()
				Button:
                    text: 'show this wall'
					on_release:
						wbs.getWallName(spinner.text)
						wbs.getScreensByWall()
						app.next_screen('wall_builder_screen')
