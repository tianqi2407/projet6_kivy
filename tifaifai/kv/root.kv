#:kivy 1.8.0

RootWidget:
    # import container
    container: container

    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 6

        # bottom-left part:
        BoxLayout:
            orientation: 'horizontal'
            padding: 0
            spacing: 6

            # bottom-left
            BoxLayout:
                size_hint: 0.12, 0.20
                orientation: 'vertical'
                padding: 0
                spacing: 6

                # option calibrate
				BoxLayout:
					orientation: 'vertical'
					padding: 0
					spacing: 0
					Button:
						text: 'Wall'
						on_release: app.next_screen('wall')
					Button:
						text: 'Scenary'
						on_release: app.next_screen('scenary')
					Button:
						text: 'Media'
						on_release: app.next_screen('media')

            # create container (bottom-right)
            BoxLayout:
                id: container
				Label:
					text: 'KivySurf'
					font_size: '64sp'
