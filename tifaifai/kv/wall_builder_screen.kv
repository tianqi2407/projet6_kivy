#:kivy 1.8.0
#:import datetime datetime

RootWidget:
    # import container
    container: container

    # fill the container
    
    BoxLayout:
    	
    	id: container
		name: "Wall builder"
        orientation: 'vertical'
        padding: 0
        spacing: 6
		
		
		BoxLayout:
			anchor_x: 'center'
			anchor_y: 'top'
				    
			Button:
				size_hint: None, None
				pos_hint: {'top': 1 ,'left': 1}
				text: "Back"
				height: 40
				on_release: 
					app.next_screen('wall')
	
			Label:
				text: "Build a Wall"
				font_size: '40sp'
				text_size: self.size
				halign: 'center'
				valign: 'top'
	
			Button:
				size_hint: None, None
				pos_hint: {'top': 1 ,'right': 1}
				text: "Validate"
				height: 40
				on_release: 
					app.next_screen('scenary')

		BoxLayout:
            size_hint: .5, None
			height: 100
			pos_hint: {'center_x': .5}
			
			BoxLayout:
				Button:
					text: 'ecran1'
				Button:
					text: 'ecran2'
				Button:
					text: 'ecran3'
			
			Button:            
				text: "Add screen"
				on_release: 
					app.next_screen('screen_builder_screen')

        Button:
            size_hint: None, None
            pos_hint: {'center': 1 ,'center': 1}
            text: "display screens"
            height: 40
            on_release:
                app.display()
