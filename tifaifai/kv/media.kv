#:kivy 1.8.0
#:import datetime datetime

RootWidget:
    # import container
    container: container

    # fill the container

    BoxLayout:

    	id: container
		name: "Media"
        orientation: 'vertical'
        padding: 0
        spacing: 6

		BoxLayout:
			anchor_x: 'center'
			anchor_y: 'top'

			Button:
				size_hint: None, None
				pos_hint: {'top': 1 ,'left': 1}
				text: "Back"
				height: 40
				on_release:
					app.next_screen('wall')

			Label:
				text: "Media"
				text_size: self.size
				font_size: '40sp'
				size: self.texture_size
				halign: 'center'
				valign: 'top'

			Button:
				size_hint: None, None
				pos_hint: {'top': 1 ,'right': 1}
				text: "Validate"
				height: 40
				on_release:
					app.next_screen('scenary')


		BoxLayout:
			size_hint: .5, None
			height: 100
			pos_hint: {'center_x': .5}
			orientation: 'vertical'

			FileChooserIconView:
				id: filechooser

			Button:
				text: "Add media"
				on_release:
					app.next_screen('add_media')

