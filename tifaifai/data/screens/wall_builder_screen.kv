
<WallBuilderScreen>
    BoxLayout:
        anchor_x: 'Top'
        size_hint_y: None
        height: '48dp'

        Button:
            pos: root.x, root.height / 2
            text: "WallBuilderScreen"

        Button:
            pos: root.width - 100, root.height / 2
            text: "Add screen"
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'screenBuilder'
